{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "allowJs": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "inlineSources": true,
    "outDir": ".build"
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*.ts"
  ],
  "types": [
    "koa"
  ]
}
